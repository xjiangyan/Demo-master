<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@mipmap/my_title_top_bg"
              android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_65"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_175"
        android:layout_marginTop="@dimen/dp_2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/my_photo_iv"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/default_person"
            android:clickable="true"/>

        <RelativeLayout
            android:id="@+id/login_yes_no_rl"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_8"
            android:clickable="true">

            <LinearLayout
                android:id="@+id/person_info_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/person_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white_text_bg"
                    android:textSize="@dimen/sp_16"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_13"
                        android:layout_height="@dimen/dp_12"
                        android:background="@mipmap/crown_bg"/>

                    <TextView
                        android:id="@+id/person_level_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textColor="@color/white_text_bg"
                        android:textSize="@dimen/sp_13"/>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/login_start_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="点击登录"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"/>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>